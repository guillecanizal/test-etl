CREATE KEYSPACE testguillermo WITH replication = {'class':'SimpleStrategy', 'replication_factor' : 1};

CREATE TABLE testguillermo.flights ( ID int PRIMARY KEY, YEAR int, DAY_OF_MONTH int, FL_DATE timestamp, AIRLINE_ID int, CARRIER varchar, FL_NUM int, ORIGIN_AIRPORT_ID int, ORIGIN varchar, ORIGIN_CITY_NAME varchar, ORIGIN_STATE_ABR varchar, DEST varchar, DEST_CITY_NAME varchar, DEST_STATE_ABR varchar, DEP_TIME timestamp, ARR_TIME timestamp, ACTUAL_ELAPSED_TIME timestamp, AIR_TIME timestamp, DISTANCE int);

CREATE TABLE testguillermo.queryone (FL_NUM int, ORIGIN_AIRPORT_ID int,DEP_TIME timestamp , PRIMARY KEY (ORIGIN_AIRPORT_ID,DEP_TIME,FL_NUM) ) WITH CLUSTERING ORDER BY (DEP_TIME ASC, FL_NUM ASC);

CREATE TABLE testguillermo.querytwo (CARRIER varchar,AIR_TIME timestamp,  ORIGIN varchar,  DEST varchar,  PRIMARY KEY ( CARRIER, AIR_TIME, ORIGIN, DEST ) ) WITH CLUSTERING ORDER BY (AIR_TIME DESC);